<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@color/white">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a test."
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            style="@style/TitleTextView"/>

        <TextView
            android:id="@+id/time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 minutes ago"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="4dp"
            android:layout_below="@id/title"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/time_stamp"
            android:layout_alignTop="@id/time_stamp"
            android:text="-"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5350 Burnet Rd."
            android:textSize="12sp"
            android:paddingStart="4dp"
            android:paddingEnd="16dp"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/separator"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is some example description. I am just writing random stuff to fill up a line sone that it will word wrap."
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="16dp"
            android:layout_below="@id/location"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>